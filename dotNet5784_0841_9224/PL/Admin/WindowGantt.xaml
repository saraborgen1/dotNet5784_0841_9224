    <DataGrid ItemsSource="{Binding TaskListProperty}" Initialized="dataGridSched_Initialized">
        <DataGrid.Columns>
            <!-- Define your DataGrid columns here -->
        </DataGrid.Columns>
        <DataGrid.CellStyle>
            <Style TargetType="DataGridCell">
                <Setter Property="Background">
                    <Setter.Value>
                        <!-- Bind to multiple properties using MultiBinding -->
                        <MultiBinding Converter="{StaticResource CellColorConverterKey}">
                            <!-- Bind to the cell itself -->
                            <Binding RelativeSource="{RelativeSource Self}" />
                            <!-- Bind to the DataRow (assuming you have a DataRow property in your data context) -->
                            <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </Style>
        </DataGrid.CellStyle>
    </DataGrid>


