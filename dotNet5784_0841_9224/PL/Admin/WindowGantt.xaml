<Window x:Class="PL.Admin.WindowGantt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        Title="WindowGantt" Height="450" Width="800"
        DataContext="{Binding TaskListProperty, RelativeSource={RelativeSource Self}, Mode=TwoWay}" >
    <Window.Resources>
        <DataTemplate DataType="local:MyData">
            <Grid>
                <Rectangle Fill="Blue" Margin="{Binding , Converter={StaticResource DateToMarginConverter}}" Width="{Binding Duration, Converter={StaticResource DateToWidthConverterKey}}" Height="20"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid HorizontalAlignment="Left" Height="296" Margin="98,90,0,0" VerticalAlignment="Top" Width="517"/>
</Window>
