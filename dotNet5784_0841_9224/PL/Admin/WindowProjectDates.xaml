        <DatePicker DisplayDateStart="2022-01-01" DisplayDateEnd="2022-12-31"  HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" SelectedDateChanged="SelectEndDate"  />
        <Button Content="Set" HorizontalAlignment="Left" Height="51" Margin="232,184,0,0" VerticalAlignment="Top" Width="219" Click="Button_SetDates"
